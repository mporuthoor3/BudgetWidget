<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/widgetView">

    <TextView
        android:id="@+id/dayWidgetTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dailyBalanceWidgetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/dayWidgetTitleView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weekWidgetTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/week"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/dailyBalanceWidgetView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weeklyBalanceWidgetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/weekWidgetTitleView"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>